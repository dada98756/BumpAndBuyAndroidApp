<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity" 
    android:background="@drawable/backgroundetails" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:drawableBottom="#8C1D04"
            android:background="@drawable/translucentbacking"
            android:text="Title"
            android:textColor="#F2E1C2"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/seller_textview"
                android:layout_width="200dp"
                android:background="@drawable/translucentbacking"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Seller"
                android:textColor="#F2E1C2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/price_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/translucentbacking"
                android:text="Price"
                android:textColor="#F2E1C2"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/description_textview"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:maxLines="5"
            android:background="@drawable/translucentbacking"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:layout_marginRight="15dp"
            android:textColor="#F2E1C2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:background="@drawable/translucentbacking"
            android:src="@drawable/com_facebook_profile_default_icon" />

    </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >
                    
             <Button
                android:id="@+id/buyButton"
                android:layout_width="120dp"
       	 		android:layout_height="60dp"
       	 		android:textSize="30sp"
       	 		android:layout_marginLeft="25dp"
       	 		android:layout_marginTop="25dp"
       			android:textColor="#F2E1C2"
        		android:background="@drawable/bumpbutton2"
                android:onClick="onBuyButtonClick"
                android:text="Buy it!" />
             
              <Button
                android:id="@+id/backButton"
                android:textSize="30sp"
                android:layout_width="120dp"
        		android:layout_height="60dp"
        		android:layout_marginTop="25dp"
        		
        		android:background="@drawable/bumpbutton2"
        		android:layout_marginLeft="30dp"
        		android:textColor="#F2E1C2"
                android:onClick="onBackButtonClick"
                android:text="Meh..." />
            </LinearLayout>

</RelativeLayout>