<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpost"
    
    tools:context=".PostFormActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft = "10dp"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
              android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Title" 
            android:textColor="#8C1D04"
            />
        

        <EditText
            android:id="@+id/title_edittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
              android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#8C1D04"
            android:text="Price" />

        <EditText
            android:id="@+id/price_edittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
              android:layout_marginTop="15dp"
            android:textColor="#8C1D04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/description_edittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        
        <TextView
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="#8C1D04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Attributes" />

        <EditText
          
            android:id="@+id/attribute_edittext"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/loadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="onLoadImageButtonClick"
            android:text="Load Image" />

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sellButton"
                android:layout_width="wrap_content"
                android:textColor="#F2E1C2"
                android:layout_height="44dp"
                android:layout_marginLeft = '10dp'
                android:background="@drawable/bumpbutton2"
                android:onClick="onSellButtonClick"
                android:text="Sell it" />
            
            <Button
                android:id="@+id/wantButton"
                android:layout_width="wrap_content"
                android:textColor="#F2E1C2"
                 android:layout_marginLeft = '25dp'
                android:background="@drawable/bumpbutton2"
                android:layout_height="44dp"
                android:onClick="onWantButtonClick"
                android:text="Want it" />
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                 android:layout_marginLeft = '25dp'
                android:textColor="#F2E1C2"
                android:background="@drawable/bumpbutton2"
                android:onClick="onBackButtonClick"
                android:text="Changed My Mind!" />
        </LinearLayout>
      
    </LinearLayout>
     

</RelativeLayout>